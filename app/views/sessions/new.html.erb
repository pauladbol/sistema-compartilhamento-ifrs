<section id="section-login" class="min-margin-top">
<% if notice != nil %>
        <div class= "alert alert-success alert-dismissible col-lg-offset-4 col-lg-4 centralize text-center">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <p id="notice"><%= notice %></p>
        </div>
    <%end%>
<div class="form-horizontal">
    <div class="col-lg-12 text-center login-title">
        <h2>Entre para continuar</h2>
        </br>
        <h4></h4>
    </div>
    
    <%= form_for(:session, url: login_path, :html=>{:id=>"form-login"}) do |f| %>

        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
                <%= f.text_field :email, :id => "email-session", :placeholder => "E-mail", :class => "form-control validate-email" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
                <%= f.password_field :password_digest, id: "password-session", :placeholder => "Senha", :class => "form-control validate-password" %>
            </div>
        </div>
        <!-- <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
                <%= check_box_tag :remember_me, 1, params[:remember_me], :id => "remember-me" %>
                <%= f.label "Manter-me logado", :for => "remember-me"%>
                <a class="pull-right" href '' data-toggle="modal" data-target="#recover-password-modal">Esqueceu sua senha? </a>
            </div>
        </div> -->
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
                <%= f.submit "Entrar", :class => "btn btn-default btn-lg btn-block btn-primary" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-4 col-lg-3">
                <%= link_to 'Nao possui uma conta? Cadastre-se agora!', users_new_path %>            
            </div>
        </div>
    <% end %>
</div>

</section>
