<p id="notice"><%= notice %></p>

<section id="section-cadasro" class="min-margin-top">
  <div class="form-horizontal">
      <div class="col-lg-12 text-center login-title">
          <h1>Listing Posts</h1>
        </br>
          <h4></h4>
      </div>


    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Subject</th>
          <th>Subject</th>
          <th>Text</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.subject_id %></td>
            <td><%= post.subject.name %></td>
            <td><%= post.text %></td>
            <td><%= link_to 'Show', @post %></td>
            <td><%= button_to 'Edit', edit_post_path(post) %></td>

            <td><%= button_to "Delete", post, :method=>:delete, :class=>:destroy %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= button_to 'Nova Postagem', new_post_path %>

  </div>

</section>