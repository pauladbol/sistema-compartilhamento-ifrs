<% if notice != nil %>
  <div class= "alert alert-success col-lg-offset-4 col-lg-4 centralize text-center">
    <p id="notice"><%= notice %></p>
  </div>
<%end%>


<section id="section-posts">
    <div class="form-horizontal min-margin-top">
        <div class="col-lg-offset-2 col-lg-6 login-title">
            <h1>Postagens</h1>
            </br>
            <h4></h4>
            
        </div>
        <div class="col-lg-1 post-button">
            <% if current_user %>
                <%= button_to 'Nova Postagem', new_post_path %>
            <% end %>
        </div>
        <div class="col-lg-3">
        </div>

        <div class="col-lg-offset-2 col-lg-8">
            <% @posts.each do |post| %>
                <div class="row post-list">
                    <div class="col-lg-2">
                        <%= image_tag "shareif.jpeg", size: "70x70", :class => "text-left" %>
                    </div>
                    <div class="col-lg-7">
                        <div class="row">
                            <%= link_to post.title, post %>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <% if post.user != nil %>
                                Por <%= post.user.name %>
                            <% end %>
                        </div>
                    </div>
                    <div class="col-lg-3 text-right">
                        <div class="row">
                            <%= post.subject.name %>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <%= post.created_at %>
                        </div>
                    </div>
                </div>
            <% end %>

        </div>

    </div>

</section>