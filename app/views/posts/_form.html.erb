<%= tinymce %>
<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

		  <ul>
		  <% @post.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		  <% end %>
		  </ul>
		</div>
	<% end %>

	<div class="form-group">
		<div class="col-lg-offset-3 col-lg-6">
		  <%= f.text_field :title, :id => "title-post", :placeholder => "TÃ­tulo", :class => "form-control" %>
		</div>
	</div>
	<div class="form-group"> 
		<div class="col-lg-offset-3 col-lg-6 text-area-size ">
		    <div class="">
		     <%= f.text_area :text, :class => "tinymce", :id => "tinymce", cols: "30", rows: "15" %>
		  	</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-3 col-lg-6">
			<div class="">
		  		<%= f.collection_select :subject_id, Subject.order(:name), :id, :name, :class => "", :prompt => "--- Categoria ---" %>
		 	 </div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-3 col-lg-6">
			  	
		   	<% if @post.attachment_file_name != nil %>
               <%= link_to @post.attachment_file_name, @post.attachment.url(:original, false) %>
               <%= f.check_box :delete_attachment, :label => "Deletar Anexo"%>
            <% elsif %>
            <%= f.file_field :attachment %>
            <% end %>
		</div>
	</div>

	<%= f.hidden_field :user_id, value: current_user.id %>
	<div class="form-group">
		<div class="col-lg-offset-3 col-lg-6">
		  <%= f.submit "Salvar", :class => "btn btn-default btn-lg btn-block btn-primary" %>
		</div>
	</div>
<% end %>
