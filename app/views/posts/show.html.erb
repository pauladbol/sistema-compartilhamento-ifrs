<p id="notice"><%= notice %></p>

<section id="section-posts" class="min-margin-top">
	<div class="form-horizontal">
		<div class="form-group ">
		    <div class="col-lg-12 text-center login-title">
				 <h2> <%= @post.title %></h2>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-offset-3 col-lg-6 well text-area-size">
			  <%= @post.text %>
			</div>
		</div>
		<div class="form-group ">
			<div class="col-lg-offset-3 col-lg-6">
			  <strong>Assunto: </strong>
			  <%= @post.subject.name %>
			</div>
		</div>
		<div>
			<div class="col-lg-offset-3 col-lg-6">
				<%= link_to 'Editar', edit_post_path(@post) %>
				<%= link_to 'Voltar', posts_path %>
			</div>
		</div>
		<div>
			<div class="col-lg-offset-3 col-lg-6">
				<%= @post.user_id %>
			</div>
		</div>
	</div>
</section>
