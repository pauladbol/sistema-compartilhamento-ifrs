<% if notice != nil %>
	<div class= "alert alert-success col-lg-offset-4 col-lg-4 centralize text-center">
		<p id="notice"><%= notice %></p>
	</div>
<%end%>

<!-- Page Content -->
    <div class="container min-margin-top">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-offset-2 col-lg-8">

                <!-- Blog Post -->
                <div class="row">
                    <div class="col-lg-11">
                        <!-- Title -->
                        <h1><%= @post.title %></h1>
                    </div>
                    <div class="col-lg-1">
                        <% if @post.user == current_user %>
                            <a href= "/posts/<%=@post.id%>/edit" class="btn btn-default" title="Editar Postagem">
                            <span class="glyphicon glyphicon-edit" style="font-size: 30px;" aria-hidden="true">
                            </a>
                        <% end %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <% if @post.user != nil %>
                            <!-- Author -->
                            <p class="lead">
                                Por <%= link_to @post.user.name, @post.user %>
                                <!-- por <a href="#"><%= @post.user.name %></a> -->
                            </p>
                        <% end %>
                    </div>
                </div>  
                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time " aria-hidden="true"></span> Postado em <%= @post.created_at %></p>

                <!-- Preview Image -->
                <!-- <img class="img-responsive" src="http://placehold.it/900x300" alt=""> -->

                <hr>

                <!-- Post Content -->
                <p class="lead"><%= @post.text.html_safe %></p>

                <hr>
                <div class="col-lg-6">
	                <!-- Date/Time -->
	                <p><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Última alteração em <%= @post.updated_at %></p>
	            </div>
                <div class="cl-lg-2 text-right">
                	<%= button_to like_post_path(@post), class: "btn btn-default" , method: :put do %>
                		Aprovado!
					  	<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span> 
					  	<%= @post.get_upvotes.size %>
					<% end %>
				</div>
                <hr>
                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Deixe um comentário:</h4>
                    <form role="form">
                        <div class="form-group">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Enviar</button>
                    </form>
                </div>

                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
