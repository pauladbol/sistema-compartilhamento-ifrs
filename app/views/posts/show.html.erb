<p id="notice"><%= notice %></p>

<section id="section-posts" class="min-margin-top">
	<div class="form-horizontal">
		<div class="form-group ">
		    <div class="col-lg-12 text-center login-title">
				 <h2> <%= @post.title %></h2>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-offset-3 col-lg-6 well text-area-size">
			  <%= @post.text %>
			</div>
		</div>
		<div class="form-group ">
			<div class="col-lg-offset-3 col-lg-6 well">
			  <strong>Assunto: </strong>
			  <%= @post.subject.name %>
			</div>
		</div>
		<div class="form-group">
			<div class="well col-lg-offset-3 col-lg-6">
				<div class="col-lg-2 text-center">
					<%= image_tag("user-pic.jpg", :alt => "Usuario", width: 50) %>
				</div>
				<div class="col-lg-4">
					<div>
						<h4> <%= @post.user.name %> </h4>
					</div>
					<div>
						<%= @post.user.username %>
					</div>
				</div>
			</div>
		</div>
		<div>
			<div class="col-lg-offset-3 col-lg-6">
				<%= button_to 'Editar', edit_post_path(@post) %>
				<%= button_to 'Voltar', posts_path %>
			</div>
		</div>

	</div>
</section>
