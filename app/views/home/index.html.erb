<% if notice != nil %>
  <div class= "alert alert-info alert-dismissible col-lg-offset-4 col-lg-4 centralize text-center">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p id="notice"><%= notice %></p>
  </div>
<%end%>

    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <%= image_tag "shareif-logo1.png", size: "80x80" %>
                        <h1>ShareIF</h1>
                        <h2>Sistema de Compartilhamentos IFRS</h2>
                        <h3>Sistema desenvolvido para que os alunos do IFRS Campus Restinga possam compartilhar materiais de aula entre sí</h3>

                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <% if current_user %>
                                <li>
                                    <%= link_to 'Crie uma nova postagem', new_post_path, :class=>"btn btn-default btn-lg"%> 
                                    
                                </li>
                                <li>
                                    <%= link_to 'Visualize as postagens existentes', posts_path, :class=>"btn btn-default btn-lg" %> 
                                </li>
                            <% else %>
                                <li>
                                    <%= link_to 'Faça Login', login_path, :class=>"btn btn-default btn-lg"%> 
                                    
                                </li>
                                <li>
                                    <%= link_to 'Cadastre-se', new_user_path, :class=>"btn btn-default btn-lg" %> 
                                </li>
                            <% end %>
                            
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
